{{!< default}}


{{#post}}

<main class="content pure-g" role="main">

  <article class="{{post_class}}-page">

    <header class="pure-u-1 post-header">
      <h1 class="post-title">{{title}}</h1>
      <section class="post-meta">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}
      </section>
    </header>

    <div class="pure-u-md-6-24 clearfix"></div>
    <section class="pure-u-1 pure-u-md-12-24">
      {{content}}
    </section>
    <div class="pure-u-md-6-24 clearfix"></div>


    <footer class="post-footer">
      <section class="share">

        <a class="icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
        <i class="fa fa-lg fa-twitter"></i>
      </a>

      <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
      onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
      <i class="fa fa-lg fa-facebook"></i>
    </a>

    <a class="icon-google-plus" href="http://pinterest.com/pin/create/link/?url={{url absolute="true"}}"
    onclick="window.open(this.href, 'pinterest-share', 'width=490,height=530');return false;">
    <i class="fa fa-lg fa-pinterest"></i>
  </a>

</section>

</footer>


<div class="pure-u-md-6-24 clearfix"></div>


<div id="disqus_thread" class="pure-u-1 pure-u-md-12-24"></div>
<div class="pure-u-md-6-24 clearfix"></div>



</article>

</main>


<script type="text/javascript">
        var disqus_shortname = 'XXXX'; // required: replace example with your forum shortname

        (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      </script>

      {{/post}}
